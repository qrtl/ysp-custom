<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_analytic_line_form" model="ir.ui.view">
        <field name="name">account.analytic.line.form</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="account_analytic_type.view_account_analytic_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category']" position="after">
                <field name="sale_id"/>
                <field name="team_id"/>
                <field name="sale_user_id"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="product_id"/>
                <field name="product_categ_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_analytic_line_tree" model="ir.ui.view">
        <field name="name">account.analytic.line.tree</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="account_analytic_type.view_account_analytic_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category']" position="after">
                <field name="sale_id"/>
                <field name="team_id"/>
                <field name="sale_user_id"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="product_id"/>
                <field name="product_categ_id"/>
            </xpath>
        </field>
    </record>

</odoo>
